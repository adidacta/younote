{
  "manifest_version": 3,
  "name": "YouNote - YouTube Note Taker",
  "version": "1.0.0",
  "description": "Take timestamped notes while watching YouTube videos. Automatically syncs to YouNote.",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "permissions": [
    "storage",
    "activeTab"
  ],
  "host_permissions": [
    "https://www.youtube.com/*",
    "https://youtu.be/*",
    "http://localhost:3000/*",
    "https://*.vercel.app/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://www.youtube.com/*",
        "https://youtu.be/*"
      ],
      "js": ["content.js"],
      "css": ["styles/youtube.css"],
      "run_at": "document_end"
    },
    {
      "matches": [
        "http://localhost:3000/*",
        "https://*.vercel.app/*"
      ],
      "js": ["auth-detector.js"],
      "run_at": "document_end"
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "web_accessible_resources": [
    {
      "resources": ["styles/youtube.css"],
      "matches": ["https://www.youtube.com/*", "https://youtu.be/*"]
    }
  ]
}
